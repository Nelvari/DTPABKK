<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@mipmap/bri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/btnTalangan"
            android:layout_marginLeft="50dp"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_marginStart="50dp"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:background="@mipmap/berkas" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="#707070" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DANA TALANGAN"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/btnSendalan"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp">

            <ImageView
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:background="@mipmap/berkas" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="#707070" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DANA SENDALAN"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/btnDadakan"
            android:layout_marginLeft="50dp"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_marginStart="50dp"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:background="@mipmap/berkas" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="#707070" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DANA DADAKAN"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/btnTambah"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp">

            <ImageView
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:background="@mipmap/add" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="#707070" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah data"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/btnUser"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/logo" />

        <View
            android:layout_width="85dp"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#707070" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERS"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>