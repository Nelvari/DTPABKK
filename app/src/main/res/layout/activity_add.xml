<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/rvToolbar"
        android:layout_width="match_parent"
        android:background="@color/purple_700"
        android:layout_height="55dp">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tvToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Data"
            android:layout_toRightOf="@id/ivBack"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_toEndOf="@id/ivBack" />

        <ImageView
            android:layout_marginHorizontal="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            app:tint="@android:color/white" />

        <ImageView
            android:layout_marginHorizontal="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/ivLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:tint="@android:color/white" />

    </RelativeLayout>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rvToolbar">

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btnTalangan"
                android:layout_marginHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/berkas" />

                <View
                    android:layout_width="85dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#707070" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DANA TALANGAN"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btnSendalan"
                android:layout_marginHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/berkas" />

                <View
                    android:layout_width="85dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#707070" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DANA SENDALAN"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btnDadakan"
                android:layout_marginHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/berkas" />

                <View
                    android:layout_width="85dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#707070" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DANA DADAKAN"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btnUser"
                android:layout_marginHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/logo" />

                <View
                    android:layout_width="85dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#707070" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USER"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>